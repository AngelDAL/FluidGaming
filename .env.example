# Environment Configuration for Tournament Points System
# Copy this file to .env and configure for your environment

# Application Environment
APP_ENV=production
APP_NAME="Sistema de Puntos y Torneos"
APP_VERSION=1.0.0
APP_URL=https://your-domain.com
APP_DEBUG=false
APP_TIMEZONE=America/Mexico_City
APP_LOCALE=es

# Database Configuration
DB_HOST=localhost
DB_NAME=tournament_points
DB_USER=tournament_user
DB_PASS=your_secure_password
DB_CHARSET=utf8mb4

# File Upload Settings
MAX_FILE_SIZE=5242880
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,gif
UPLOAD_PATH=uploads/

# Cache Configuration
CACHE_ENABLED=true
CACHE_DEFAULT_TTL=300
CACHE_PATH=cache/

# Logging Configuration
LOG_ENABLED=true
LOG_LEVEL=error
LOG_PATH=logs/
LOG_MAX_FILES=30

# Email Configuration (for future notifications)
MAIL_ENABLED=false
MAIL_HOST=smtp.your-provider.com
MAIL_PORT=587
MAIL_USERNAME=your-email@domain.com
MAIL_PASSWORD=your-email-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@your-domain.com
MAIL_FROM_NAME="Sistema de Torneos"

# Security Settings
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_PATH=backups/
BACKUP_RETENTION_DAYS=30

# SSL/HTTPS Settings (set to true if using HTTPS)
FORCE_HTTPS=true
SESSION_SECURE=true

# Additional Security
# Generate a random 32-character string for this
APP_SECRET_KEY=your-32-character-secret-key-here

# Database Connection Pool (for high traffic)
DB_POOL_MIN=5
DB_POOL_MAX=20

# Performance Settings
ENABLE_GZIP=true
ENABLE_OPCACHE=true
MEMORY_LIMIT=256M

# Monitoring (optional)
MONITORING_ENABLED=false
MONITORING_ENDPOINT=https://your-monitoring-service.com/webhook