# Environment Configuration for Tournament Points System
# Development Environment

# Application Environment
APP_ENV=development
APP_NAME="Sistema de Puntos y Torneos"
APP_VERSION=1.0.0
APP_URL=http://localhost
APP_DEBUG=true
APP_TIMEZONE=America/Mexico_City
APP_LOCALE=es

# Database Configuration
DB_HOST=localhost
DB_NAME=tournament_points
DB_USER=root
DB_PASS=
DB_CHARSET=utf8mb4

# File Upload Settings
MAX_FILE_SIZE=5242880
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,gif
UPLOAD_PATH=uploads/

# Cache Configuration
CACHE_ENABLED=true
CACHE_DEFAULT_TTL=300
CACHE_PATH=cache/

# Logging Configuration
LOG_ENABLED=true
LOG_LEVEL=debug
LOG_PATH=logs/
LOG_MAX_FILES=30

# Email Configuration (disabled for development)
MAIL_ENABLED=false
MAIL_HOST=
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@localhost
MAIL_FROM_NAME="Sistema de Torneos"

# Security Settings
RATE_LIMIT_ENABLED=false
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_PATH=backups/
BACKUP_RETENTION_DAYS=30

# Development Settings
FORCE_HTTPS=false
SESSION_SECURE=false